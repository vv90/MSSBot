<Window x:Class="MSSBot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:v="clr-namespace:MSSBot.Views"
        Title="MainWindow" Height="350" Width="525">
    <Grid Background="SkyBlue">
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Border Background="White" CornerRadius="5" Margin="3">
			<v:ConnectView Grid.Column="0"/>
		</Border>
		<GridSplitter Grid.Column="0" HorizontalAlignment="Right" Width="3" Background="Gray"/>
		<v:RangeStringInputView Grid.Column="1"></v:RangeStringInputView>
	</Grid>
</Window>
